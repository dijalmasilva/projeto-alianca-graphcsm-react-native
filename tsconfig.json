{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "es2015",
    "jsx": "react",
    "noEmit": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "components/*": ["./components/*"],
      "layouts/*": ["./layouts/*"],
      "models/*": ["./models/*"],
      "screens/*": ["./screens/*"],
      "themes/*": ["./themes/*"],
      "utils/*": ["./utils/*"],
      "services/*": ["./services/*"],
      "graphql/*": ["./graphql/*"],
    }
  },
  "exclude": [
    "node_modules",
  ]
}
